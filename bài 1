#include <iostream>
#include <cmath>

using namespace std;

int main() {
    // Nhập tọa độ điểm A và các hệ số của phương trình mặt phẳng
    double x, y, z, a, b, c, d;
    cout << "Nhap toa do diem A: ";
    cin >> x >> y >> z;
    cout << "Nhap he so a, b, c, d cua mat phang: ";
    cin >> a >> b >> c >> d;

    // Tính khoảng cách từ điểm A tới mặt phẳng
    double distance = abs(a*x + b*y + c*z + d) / sqrt(a*a + b*b + c*c);

    cout << "Khoang cach tu diem A den mat phang la: " << distance << endl;

    return 0;
}
